generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id       BigInt   @id(map: "user_id_pk") @default(autoincrement())
  chat_id  BigInt
  username String   @db.VarChar
  profile  profile?
}

model profile {
  first_name String @db.VarChar
  id         BigInt @id(map: "profile_id_pk")
  picture    String @db.VarChar
  last_name  String @db.VarChar
  user       user   @relation(fields: [id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "profile_user_id_fk")
}
